import random


while True:
    lenght = input("What lenght you would like your password to be?: ")

    if not lenght.isdigit():
        print("please try to enter only a number")
        continue
    elif lenght.isdigit():
        lenght = int(lenght)
        break

def generator(len):
    password_chars = str("abcdefghijklmnopqrstuwvxyzABCDEFGHIJKLMNOPQRSTUWVXYZ1234567890',.<>?!@#$%^&*()_-+=:;/|")
    passw = str("")
    for i in range (len):
         
        passw += random.choice(password_chars)
    return passw

print(generator(lenght))
